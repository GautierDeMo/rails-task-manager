<h1 class="m-3">My Tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item p-2">
      <%= task.title %> |
      <%= task.details %> |
      <%= task.completed %>
      <%= link_to 'View', task_path(task), class: "btn btn-outline-primary" %>
    </li>
  <% end %>
  <%= link_to 'Add', new_task_path, class: "btn btn-primary mt-3" %>
</ul>

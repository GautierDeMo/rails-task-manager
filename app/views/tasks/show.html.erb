<h1>My Tasks</h1>
<h2><%= @task.title %></h2>
<h3><%= @task.details %></h3>
<p><%= @task.completed %></p>
<%= link_to 'Back', tasks_path, class: "btn btn-outline-dark mt-3" %>
<%= link_to 'Update', edit_task_path, class: "btn btn-outline-success mt-3" %>
<%= link_to 'Delete',
  task_path(@task), class: "btn btn-outline-danger mt-3",
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
